# Keycloak (OIDC)
OIDC_ISSUER=https://keycloak.example.com/auth/realms/example
OIDC_AUDIENCE=https://memory-mcp.example.com/mcp

# PRM resource (your MCP server public base)
PRM_RESOURCE_URL=https://memory-mcp.example.com/mcp

# Service (set PORT in your real .env to an available value)
REQUIRE_AUTH=true
ENABLE_SSE=true
ENABLE_STREAMABLE=true
MCP_SERVER_NAME=openmemory
MCP_SERVER_VERSION=0.1.0
MCP_NETWORK_EXTERNAL=traefik
# Optional internal network configuration
# MCP_NETWORK_INTERNAL=openmemory-internal
# MCP_NETWORK_INTERNAL_EXTERNAL=false
# MCP_NETWORK_INTERNAL_INTERNAL=true
# (extend services/openmemory/compose.yml if you need to join this network)
MCP_PUBLIC_HOST=memory.example.com
MCP_SERVICE_NAME=openmemory-mcp
MCP_BUILD_CONTEXT=./services/openmemory

# OpenMemory backend (do not expose these publicly)
OPENMEMORY_BASE_URL=https://openmemory.example.com
# If your OpenMemory API expects a token, place it in OPENMEMORY_API_TOKEN inside the non-versioned .env
# OPENMEMORY_API_TOKEN=
